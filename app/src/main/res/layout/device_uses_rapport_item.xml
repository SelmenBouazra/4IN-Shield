<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:background="@drawable/method_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/device_uses_rapport_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danger Level"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/device_uses_rapport_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="High"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/device_uses_rapport_label"
        app:layout_constraintStart_toStartOf="@+id/device_uses_rapport_label"
        app:layout_constraintTop_toBottomOf="@id/device_uses_rapport_label" />

</androidx.constraintlayout.widget.ConstraintLayout>