<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.RapportFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rapport_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:itemCount="4"
        tools:listitem="@layout/device_uses_rapport_item"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/method_bg"
        app:layout_constraintTop_toTopOf="@id/last_alerts_label"
        app:layout_constraintBottom_toBottomOf="@id/last_alerts_rv"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/last_alerts_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="Last Alerts"
        app:layout_constraintTop_toBottomOf="@id/rapport_rv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/last_alerts_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="4"
        tools:listitem="@layout/last_alert_rapport_item"
        app:layout_constraintTop_toBottomOf="@+id/last_alerts_label"/>



</androidx.constraintlayout.widget.ConstraintLayout>